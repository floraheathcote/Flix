<section class="movie-details">
<div class = "image">
    <%= image_tag @movie.image_file_name %>

    <div class = "faves" >
      <% if current_user %>
        <%= fave_or_unfave_button(@movie, @favorite) %>
      <% end %>
        <div class = "count">
        <%= @fans.size %>
      </div>
    </div>

</div>

  <div class="details">


    <h1><%= @movie.title %></h1>
    <h2>
      <%= year_of(@movie) %> &bull; <%= @movie.rating %>
    </h2>
    <p>
      <%= @movie.description %>
    </p>
    <table>
    <tr>
        <th>Director:</th>
        <td><%= @movie.director %></td>
      </tr>
      <tr>
        <th>Duration:</th>
        <td><%= @movie.duration %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= total_gross(@movie) %></td>
      </tr>
      <div class="reviews">
          
      <%= display_stars_for_movie(@movie) %>
      <%= display_review_count_for_movie(@movie) %>
      </div>

    </table>
    <%= link_to "Write Review", new_movie_review_path(@movie),
              class: "review" %>
  </div>

  <aside>
    <% if @fans.present? %>
      <h4>Movie fans</h4>
      <ul>
          <% @fans.each do |user| %>
            <li>
            <%= link_to profile_image(user, size=40), user %>
            <%= user.username %>
            <li>
          <% end %>
          </ul>
    <% end %>

     <% if @genres %>
      <h4>Genres</h4>
      <ul>
          <% @genres.each do |genre| %>
            <li>
            <%= link_to genre.name, genre %>
            <li>
          <% end %>
          </ul>
    <% end %>

</aside>
</section>




<%= render "reviews/form", movie: @movie, review: @review %>


<% if current_user_admin? %>
  <section class = 'admin'>
  <%= link_to "Edit", edit_movie_path(@movie), class:'button' %>
  <%= link_to "Delete", @movie, class:'button', method: :delete,
                              data: { confirm: 'Are you sure? '} %>
  </section>
<% end %>